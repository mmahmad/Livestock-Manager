<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.gms.samples.vision.barcodereader"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
 <!-- Permissions required for GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
 <!-- Optional permission for App measurement to run. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="Livestock Manager"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >

            <!-- <intent-filter> -->
            <!-- &lt;!&ndash;<action android:name="android.intent.action.MAIN" />&ndash;&gt; -->


            <!-- &lt;!&ndash;<category android:name="android.intent.category.LAUNCHER" />&ndash;&gt; -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.BarcodeCaptureActivity"
            android:label="Scan Barcode" />
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.Login"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.SelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.AddInformation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.RetrieveInformation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.Inventory"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.Modify"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.Profile"
            android:screenOrientation="portrait" />
        <activity android:name="com.google.android.gms.samples.vision.barcodereader.Injections" />
        <activity android:name="com.google.android.gms.samples.vision.barcodereader.AddInjection" />
        <activity android:name="com.google.android.gms.samples.vision.barcodereader.ModifyInjection" />
        <activity
            android:name="com.google.android.gms.samples.vision.barcodereader.AddAnimalInformation"
            android:label="@string/title_activity_add_animal_information"
            android:parentActivityName="com.google.android.gms.samples.vision.barcodereader.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.google.android.gms.samples.vision.barcodereader.MainActivity" />
        </activity>
        <!-- Include the AdActivity and InAppPurchaseActivity configChanges and themes. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />

        <provider
            android:name="com.google.android.gms.measurement.AppMeasurementContentProvider"
            android:authorities="com.google.android.gms.samples.vision.barcodereader.google_measurement_service"
            android:exported="false" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>