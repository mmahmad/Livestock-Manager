<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.google.android.gms.samples.vision.barcodereader.AddAnimalInformation"
    tools:showIn="@layout/activity_add_animal_information">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Animal Information"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAnimalId"
        android:hint="Animal Id"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EarTag"
        android:id="@+id/textViewEartag"
        android:layout_below="@+id/editTextAnimalId"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAnimalType"
        android:layout_below="@+id/textViewEartag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:hint="Animal Type"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAnimalSex"
        android:layout_toRightOf="@+id/textViewEartag"
        android:hint="Animal Sex"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignBottom="@+id/editTextAnimalStatus"
        android:layout_toLeftOf="@+id/buttonSave"
        android:layout_toStartOf="@+id/buttonSave" />

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAnimalStatus"
        android:hint="Animal Status"
        android:singleLine="true"
        android:imeActionId="@+id/editTextAnimalSex"
        android:layout_below="@+id/editTextAnimalType"
        android:layout_toEndOf="@+id/editTextAnimalType"
        android:layout_toRightOf="@+id/editTextAnimalType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLocation"
        android:hint="Location"
        android:singleLine="true"
        android:layout_below="@+id/editTextWeight"
        android:layout_alignRight="@+id/editTextAnimalStatus"
        android:layout_alignEnd="@+id/editTextAnimalStatus"
        android:layout_alignLeft="@+id/editTextAnimalStatus"
        android:layout_alignStart="@+id/editTextAnimalStatus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextWeight"
        android:hint="Weight"
        android:singleLine="true"
        android:layout_below="@+id/editTextAnimalSex"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextAnimalSex"
        android:layout_alignEnd="@+id/editTextAnimalSex" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSire"
        android:layout_below="@+id/editTextWeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Sire"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/textViewEartag"
        android:layout_toStartOf="@+id/textViewEartag" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDam"
        android:layout_below="@+id/editTextSire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Dam"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextBirthDate"
        android:layout_below="@+id/editTextDam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextDam"
        android:layout_alignEnd="@+id/editTextDam"
        android:hint="Birth Date"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:id="@+id/buttonTakePhoto"
        android:layout_below="@+id/editTextBirthDate"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/editTextLocation"
        android:layout_toStartOf="@+id/editTextLocation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Photo"
        android:id="@+id/buttonViewPhoto"
        android:layout_alignTop="@+id/buttonTakePhoto"
        android:layout_toEndOf="@+id/textViewEartag"
        android:layout_toRightOf="@+id/textViewEartag"
        android:onClick="viewAnimalPhoto"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/buttonTakePhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:minWidth="100dp"
        android:minHeight="100dp"/>


</RelativeLayout>
</ScrollView>

