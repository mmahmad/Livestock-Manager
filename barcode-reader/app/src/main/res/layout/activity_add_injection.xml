<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Injection Name"
            android:id="@+id/editTextInjectionName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spinnerAnimalPicker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextInjectionName" />

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="date"-->
            <!--android:ems="10"-->
            <!--android:id="@+id/editTextDate"-->
            <!--android:hint="Date"-->
            <!--android:singleLine="true" />-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:ems="10"
            android:id="@+id/editTextDateTime"
            android:hint="Date and time"
            android:singleLine="true"
            android:layout_below="@+id/spinnerAnimalPicker"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Injection"
        android:id="@+id/buttonSaveInjection"
        android:layout_marginTop="305dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="saveInjection"/>


</RelativeLayout>
