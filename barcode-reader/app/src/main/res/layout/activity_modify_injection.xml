<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Injection Name"
        android:id="@+id/editTextModifyInjectionName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerModifyAnimalPicker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModifyInjectionName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<EditText-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:inputType="date"-->
    <!--android:ems="10"-->
    <!--android:id="@+id/editTextDate"-->
    <!--android:hint="Date"-->
    <!--android:singleLine="true" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:ems="10"
        android:id="@+id/editTextModifyDateTime"
        android:hint="Date and time"
        android:singleLine="true"
        android:layout_below="@+id/spinnerModifyAnimalPicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Modification"
        android:id="@+id/buttonModifyInjection"
        android:onClick="saveModifiedInjection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Injection"
        android:id="@+id/buttonDeleteInjection"
        android:layout_alignBottom="@+id/buttonModifyInjection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="deleteInjection"/>


</RelativeLayout>
